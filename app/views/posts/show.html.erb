<h2> <%= @post.title %> </h2>

<%= link_to "upvote", post_path(@post, upvote: true), method: "patch" %>
<%= link_to "downvote", post_path(@post, downvote: true), method: "patch" %>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post ),
              :data => {:confirm => "Are you sure?",
                                      :method => "delete"} %>

<%= render "comments/form" %>


<h3>Comments</h3>

<% if @comments.any? %>
<ul>
  <% @comments.each do |comment| %>
    <li>"<%= comment.body %>" - <%= comment.author %></li>
  <% end %>
</ul>
<% else %>
  <p> No comments yet!</p>
<% end %>
